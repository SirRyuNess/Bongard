			tolist="alvarogonzalezsotillo@gmail.com"
			subject="Pentominos"
			message="Pentominos"
			files="${output.file}"
		/-->

	</target>

	<target name="release" depends="jar">
		<copy file="${jar.file}" todir="${release.dir}"/>
	</target>
	
