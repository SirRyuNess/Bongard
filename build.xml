<project name="bongard" default="run">

	<property name="jar.file" value="bongard.jar" />
	<property name="src" value="src" />
	<property name="bin" value="bin" />
	<property name="exec.dir" value="." />

	<target name="compile">
		<mkdir dir="${bin}" />
		<javac srcdir="${src}" destdir="${bin}" fork="true" source="1.5" target="1.5" />
	</target>

	<target name="clean">
		<delete dir="${bin}" />
	</target>

	<target name="jar" depends="compile">
		<copy todir="${bin}">
			<fileset dir="${src}">
				<include name="**/*.png" />
				<include name="**/*.events" />
			</fileset>
		</copy>
		<jar destfile="${jar.file}">
			<fileset dir="${bin}" casesensitive="yes" />
			<manifest>
				<attribute name="Main-Class" value="purethought.platform.awt.AWTGame" />
			</manifest>
		</jar>
	</target>

	<target name="run-applet" depends="jar">
		<java classname="sun.applet.AppletViewer" fork="true">
			<arg value="bongard.html" />
		</java>
	</target>

	<target name="run" depends="jar">
		<java dir="${exec.dir}" jar="${jar.file}" fork="true" />

